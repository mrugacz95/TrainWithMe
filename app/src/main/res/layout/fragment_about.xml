<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimaryDark"
    android:padding="32dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_height="180dp"
                    android:src="@drawable/title_logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="26dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/mdtp_white"
                    android:text="Say goodbye to boredom in long journey."
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:textColor="@color/mdtp_white"
                    android:paddingTop="8dp"
                    android:text="Application made for Sii's Let's Code hackathon, by WeLikeTrains team."/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mdtp_white"
                    android:textAlignment="center"
                    android:layout_gravity="bottom"
                    android:paddingTop="56dp"
                    android:textSize="15dp"
                    android:text="Sebastian Alex\nGrzegorz Kotlarz\nMarcin Mrugas\nJakub Nurski"/>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>